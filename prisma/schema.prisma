generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model user {
  id          String   @id @default(uuid())
  name        String?
  username    String   @unique
  phone       String?  @unique
  email       String?  @unique
  invite_code String   @unique
  score       Int      @default(0)
  agentId     String?
  addresses   address[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model address {
  id         String   @id @default(uuid())
  title      String
  province   String
  city       String
  address    String
  postalCode String
  userId     String
  user       user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
